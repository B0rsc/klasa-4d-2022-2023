<Window x:Class="CalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWPF"
        mc:Ignorable="d"
        Title="Nasz kalkulator" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Margin="10,10,10,10"
                 Grid.Column="0"
                 Grid.Row="0"
                 Grid.ColumnSpan="5"
                 IsReadOnly="True"
                 />
        <Button Content="1"
                Grid.Column="0"
                Grid.Row="1"
                Margin="10"
                FontSize="50"/>
        <Button Content="2"
                Grid.Column="1"
                Grid.Row="1"
                Margin="10"
                FontSize="50"/>
        <Button Content="3"
                Grid.Column="2"
                Grid.Row="1"
                Margin="10"
                FontSize="50"/>
        <Button Content="4"
                Grid.Column="0"
                Grid.Row="2"
                Margin="10"
                FontSize="50"/>
        <Button Content="5"
                Grid.Column="1"
                Grid.Row="2"
                Margin="10"
                FontSize="50"/>
        <Button Content="6"
                Grid.Column="2"
                Grid.Row="2"
                Margin="10"
                FontSize="50"/>
        <Button Content="7"
                Grid.Column="0"
                Grid.Row="3"
                Margin="10"
                FontSize="50"/>
        <Button Content="8"
                Grid.Column="1"
                Grid.Row="3"
                Margin="10"
                FontSize="50"/>
        <Button Content="9"
                Grid.Column="2"
                Grid.Row="3"
                Margin="10"
                FontSize="50"/>
        <Button Content="0"
                Grid.Column="0"
                Grid.Row="4"
                Grid.ColumnSpan="3"
                Margin="10"
                FontSize="50"/>

        <Button Content="+"
                Grid.Column="3"
                Grid.Row="1"
                Margin="10"
                FontSize="50"/>
        <Button Content="-"
                Grid.Column="4"
                Grid.Row="1"
                Margin="10"
                FontSize="50"/>
        <Button Content="*"
                Grid.Column="3"
                Grid.Row="2"
                Margin="10"
                FontSize="50"/>
        <Button Content="/"
                Grid.Column="4"
                Grid.Row="2"
                Margin="10"
                FontSize="50"/>
        <Button Content="%"
                Grid.Column="3"
                Grid.Row="3"
                Margin="10"
                FontSize="50"/>
        <Button Content="C"
                Grid.Column="4"
                Grid.Row="3"
                Margin="10"
                FontSize="50"/>
        <Button Content="="
                Grid.Column="3"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Margin="10"
                FontSize="50"/>
    </Grid>
</Window>
